@article{Hui2015ResourceAllocation,
    author  = {Hui, Sheng and Silverman, Josh M. and Chen, Stephen S. and Erickson, David W. and Basan, Markus and Wang, Jilong and Hwa, Terence and Williamson, James R.},
    title   = {Quantitative proteomic analysis reveals a simple strategy of global resource allocation in bacteria},
    journal = {Molecular Systems Biology},
    year    = {2015},
    volume  = {11},
    number  = {1},
    pages   = {784},
    doi     = {10.15252/msb.20145697},
    pmid    = {25678603},
    pmcid   = {PMC4358657},
    annote  = {Hui et al. use quantitative mass-spectrometry across controlled carbon, anabolic, and ribosomal limitations in E. coli to show that the proteome partitions into coarse-grained sectors whose mass fractions vary linearly with growth rate. Roughly half of the proteome follows these growth-rate–dependent trends, which are captured by a minimal flux model with only two effective parameters, linking proteome partitioning tightly to metabolic throughput. The results reveal a simple, global resource-allocation strategy underpinning complex gene-expression responses and provide a phenomenological framework for predicting cellular physiology without detailed molecular regulation, with implications for systems biology and synthetic circuit design.}
}

@article{KoremKohanim2018BacterialGrowthLaw,
    author  = {Korem Kohanim, Yael and Levi, Dikla and Jona, Ghil and Towbin, Benjamin D. and Bren, Anat and Alon, Uri},
    title   = {A Bacterial Growth Law out of Steady State},
    journal = {Cell Reports},
    year    = {2018},
    volume  = {23},
    number  = {10},
    pages   = {2891--2900},
    doi     = {10.1016/j.celrep.2018.05.007},
    pmid    = {29874577},
    annote = {Kohanim et al. extend bacterial "growth laws" to dynamically changing environments by deriving and testing a law for nutritional upshifts: immediately after an upshift, the growth rate equals the geometric mean of the pre-shift growth rate and the growth rate on saturating carbon. Using chemostat and batch experiments, they show that this relation holds robustly.}
}

@article{Basan2015Overflow,
    author  = {Basan, Markus and Hui, Sheng and Okano, Hiroyuki and Zhang, Zhongge and Shen, Yang and Williamson, James R. and Hwa, Terence},
    title   = {Overflow metabolism in Escherichia coli results from efficient proteome allocation},
    journal = {Nature},
    year    = {2015},
    volume  = {528},
    number  = {7580},
    pages   = {99--104},
    doi     = {10.1038/nature15765},
    pmid    = {26632588},
    pmcid   = {PMC4843128},
    annote = {Basan et al. show that E. coli's aerobic acetate "overflow" is not wasteful mishandling of carbon but a global strategy driven by proteome allocation. The work reframes overflow metabolism as an optimal allocation outcome under proteome constraints rather than a regulatory failure.}
}

@article{MetzlRaz2017Principles,
    author  = {Metzl-Raz, Eyal and Kafri, Moshe and Yaakov, Gilad and Soifer, Ilya and Gurvich, Yonat and Barkai, Naama},
    title   = {Principles of cellular resource allocation revealed by condition-dependent proteome profiling},
    journal = {eLife},
    year    = {2017},
    volume  = {6},
    pages   = {e28034},
    doi     = {10.7554/eLife.28034},
    pmid    = {28857745},
    pmcid   = {PMC5578734},
    annote = {Cells maintain a substantial pool of excess ribosomal proteins (about 8\% of the proteome), implying that about 25\% of ribosomes in fast growth are idle and that this reserve increases as growth slows. This "spare ribosome" strategy trades off steady-state efficiency for rapid responsiveness.}
}

@article{Jahn2018CyanobacteriaProteomeConstraints,
    author  = {Jahn, Michael and Vialas, Vital and Karlsen, Jan and Maddalo, Gianluca and Edfors, Fredrik and Bj{\"o}rn Forsstr{\"o}m and Uhl{\'e}n, Mathias and K{\"a}ll, Lukas and Hudson, Elton P.},
    title   = {Growth of Cyanobacteria Is Constrained by the Abundance of Light and Carbon Assimilation Proteins},
    journal = {Cell Reports},
    year    = {2018},
    volume  = {25},
    number  = {2},
    pages   = {478--486.e8},
    doi     = {10.1016/j.celrep.2018.09.040},
    pmid    = {30304686}, 
    annote = {Using shotgun proteomics in Synechocystis PCC 6803 across light- and inorganic-carbon–limited regimes, Jahn et al. partition the proteome into functional sectors and show several sector sizes vary roughly linearly with growth rate. Compared with E. coli, the ribosomal sector is smaller, consistent with a lower maximal growth rate in cyanobacteria. Light limitation reshapes multiple sectors strongly, whereas Ci limitation has a weaker impact; notably, carbon-assimilation proteins track light more than external Ci.}
}

