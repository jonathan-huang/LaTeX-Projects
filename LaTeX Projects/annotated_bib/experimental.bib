@article{Schmidt2016QuantitativeEcoliProteome,
    author  = {Schmidt, Alexander and Kochanowski, Karl and Vedelaar, Silke and Ahrn{\'e}, Erik and Volkmer, Benjamin and Callipo, Luciano and Knoops, K{\`e}vin and Bauer, Manuel and Aebersold, Ruedi and Heinemann, Matthias},
